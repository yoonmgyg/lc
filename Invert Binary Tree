class Solution {
public:
    TreeNode* invertTree(TreeNode* root) {
        if (!root) {
            return nullptr;
        }

        TreeNode* tmp = root->left; // switch left and right branches 
        root->left = root->right;
        root->right = tmp;

        invertTree(root->left);   // recursively call through subtrees
        invertTree(root->right);
        return root; // Return the root
    }
};
