class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        for (char c : s) { // loop through each char
            if (c == '(' || c == '{' || c == '[') { // add to stack if open parenthesis
                st.push(c);
            } else if (!st.empty() && ((c == ')' && st.top() == '(') || (c == '}' && st.top() == '{') || (c == ']' && st.top() == '['))) { // check for match if not open 
                st.pop();
            } else { // return false if not matching
                return false;
            }
        }

        return st.empty(); // return whether all parentheses have been matched
    }
};
